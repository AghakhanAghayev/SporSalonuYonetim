@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-5">

                    <h2 class="text-center mb-4 fw-bold text-primary">Giriş Yap</h2>

                    <form id="account" method="post">

                        @if (Model.DebugMessage != null)
                        {
                            <div class="alert alert-danger fw-bold text-center shadow-sm" role="alert">
                                <i class="bi bi-exclamation-triangle-fill"></i> @Model.DebugMessage
                            </div>
                        }

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email Adresi</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Şifre</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                Beni Hatırla
                            </label>
                        </div>

                        <div class="d-grid mb-3">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg fw-bold">Giriş Yap</button>
                        </div>

                        <div class="text-center mt-3">
                            <p class="mb-1">
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">Şifrenizi mi unuttunuz?</a>
                            </p>
                            <p class="mb-1">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-bold">Yeni üye kaydı oluştur</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}