@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <div class="text-center mb-4">
                <div class="bg-primary text-white rounded-circle d-inline-flex justify-content-center align-items-center shadow-lg"
                     style="width: 80px; height: 80px; font-size: 35px; border: 4px solid white;">
                    <i class="bi bi-person-lock"></i>
                </div>
                <h2 class="mt-3 fw-bold text-primary">Hoş Geldiniz</h2>
                <p class="text-muted">Lütfen hesabınıza giriş yapın.</p>
            </div>

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <form id="account" method="post">

                        @if (Model.DebugMessage != null)
                        {
                            <div class="alert alert-danger d-flex align-items-center shadow-sm rounded-3" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
                                <div>@Model.DebugMessage</div>
                            </div>
                        }

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email"><i class="bi bi-envelope me-1"></i> Email Adresi</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control rounded-3" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password"><i class="bi bi-key me-1"></i> Şifre</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label text-muted" asp-for="Input.RememberMe">
                                    Beni Hatırla
                                </label>
                            </div>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none small">Şifremi Unuttum</a>
                        </div>

                        <div class="d-grid gap-2">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg fw-bold rounded-3 shadow hover-scale">
                                Giriş Yap <i class="bi bi-arrow-right-circle ms-2"></i>
                            </button>
                        </div>

                        <hr class="my-4 text-muted">

                        <div class="text-center">
                            <p class="text-muted small mb-2">Hesabınız yok mu?</p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-primary w-100 rounded-3">
                                <i class="bi bi-person-plus-fill me-2"></i> Yeni Kayıt Oluştur
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}