@model IEnumerable<SporSalonuYonetim.Models.Antrenor>

@{
    ViewData["Title"] = "Antrenörler";
}

<div class="container mt-4">
    <h1>Antrenör Listesi</h1>
    <hr />

    @if (User.IsInRole("Admin"))
    {
        <p>
            <a asp-action="Create" class="btn btn-primary">
                Yeni Antrenör Ekle
            </a>
        </p>
    }

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.AdSoyad)</th>
                <th>@Html.DisplayNameFor(model => model.UzmanlikAlani)</th>
                <th>Çalışma Saatleri</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">
                        @Html.DisplayFor(modelItem => item.AdSoyad)
                    </td>
                    <td>
                        <span class="badge bg-info text-dark" style="font-size: 0.9em;">
                            @Html.DisplayFor(modelItem => item.UzmanlikAlani)
                        </span>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CalismaBaslangic) - @Html.DisplayFor(modelItem => item.CalismaBitis)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.AntrenorId" class="btn btn-sm btn-info text-white">Detay</a>

                        @if (User.IsInRole("Admin"))
                        {
                            <span>|</span>
                            <a asp-action="Edit" asp-route-id="@item.AntrenorId" class="btn btn-sm btn-warning">Düzenle</a>
                            <span>|</span>
                            <a asp-action="Delete" asp-route-id="@item.AntrenorId" class="btn btn-sm btn-danger">Sil</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>