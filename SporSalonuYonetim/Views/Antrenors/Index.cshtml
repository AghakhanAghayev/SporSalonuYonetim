@model IEnumerable<SporSalonuYonetim.Models.Antrenor>

@{
    ViewData["Title"] = "Profesyonel Kadromuz";
}

<style>
    /* Sayfa arka planı */
    body {
        background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?q=80&w=1470&auto=format&fit=crop') no-repeat center center/cover;
        background-attachment: fixed;
        min-height: 100vh;
    }

    .container.mt-5 {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 40px;
        margin-top: 50px !important;
        margin-bottom: 50px !important;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    }

    .trainer-card {
        border: none;
        border-radius: 15px;
        background: #fff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
    }

        .trainer-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }

    .trainer-img-wrapper {
        height: 250px;
        overflow: hidden;
        position: relative;
        background-color: #f8f9fa; /* Resim yoksa arka plan rengi */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .trainer-img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Resmi kutuya sığdır */
        transition: transform 0.5s;
    }
        /* Avatar kullanılıyorsa (object-fit: contain) daha iyi durur */
        .trainer-img.avatar-mode {
            width: 60%;
            height: 60%;
            object-fit: contain;
        }

    .trainer-card:hover .trainer-img {
        transform: scale(1.1);
    }

    .specialty-tag {
        position: absolute;
        bottom: 10px;
        right: 10px;
        background: rgba(0, 0, 0, 0.7);
        color: #fff;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        backdrop-filter: blur(5px);
    }
</style>

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold display-5">Eğitmenlerimiz</h1>
        <p class="text-muted lead">Hedeflerinize ulaşmanız için en iyi kadro burada.</p>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-dark rounded-pill px-4 mt-2">
                <i class="bi bi-person-plus"></i> Eğitmen Ekle
            </a>
        }
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            // 1. Cinsiyete göre varsayılan avatar ikonlarını belirle
            // Bu linkler "Flaticon" gibi sitelerden alınmış temiz ikonlardır.
            string erkekAvatar = "https://cdn-icons-png.flaticon.com/512/4128/4128176.png";
            string kadinAvatar = "https://cdn-icons-png.flaticon.com/512/4128/4128349.png";

            // 2. Hangi resmi kullanacağımıza karar verelim
            string resimLink;
            bool isAvatar = false; // Avatar mı yoksa gerçek foto mu?

            if (!string.IsNullOrEmpty(item.ResimUrl))
            {
                // Antrenörün kendi fotoğrafı varsa onu kullan
                resimLink = item.ResimUrl;
            }
            else
            {
                // Yoksa Cinsiyete bak
                resimLink = (item.Cinsiyet == "Kadın") ? kadinAvatar : erkekAvatar;
                isAvatar = true; // Bu bir ikon olduğu için stilini ayarlayacağız
            }

            <div class="col">
                <div class="card trainer-card h-100">
                    <div class="trainer-img-wrapper">
                        <img src="@resimLink" class="trainer-img @(isAvatar ? "avatar-mode" : "")" alt="@item.AdSoyad">
                        <span class="specialty-tag"><i class="bi bi-star-fill text-warning"></i> @item.UzmanlikAlani</span>
                    </div>

                    <div class="card-body text-center">
                        <h4 class="fw-bold mb-1">@item.AdSoyad</h4>
                        <p class="text-muted small mb-2">(@item.Cinsiyet)</p>

                        <div class="text-muted small mb-3">
                            <i class="bi bi-geo-alt-fill text-danger"></i>
                            @(item.SporSalonu != null ? item.SporSalonu.Ad : "Salon Atanmamış")
                        </div>

                        <div class="d-flex justify-content-center gap-2 mb-3">
                            <span class="badge bg-light text-dark border">
                                <i class="bi bi-clock"></i> @item.CalismaBaslangic.ToString(@"hh\:mm") - @item.CalismaBitis.ToString(@"hh\:mm")
                            </span>
                        </div>

                        <div class="d-grid gap-2">
                            <a asp-controller="Randevus" asp-action="Create" class="btn btn-primary rounded-pill">
                                Randevu Al
                            </a>
                            <a asp-action="Details" asp-route-id="@item.AntrenorId" class="btn btn-outline-secondary rounded-pill btn-sm">
                                Profili Gör
                            </a>
                        </div>
                    </div>

                    @if (User.IsInRole("Admin"))
                    {
                        <div class="card-footer bg-white border-top-0 text-center">
                            <a asp-action="Edit" asp-route-id="@item.AntrenorId" class="text-warning text-decoration-none mx-2 fw-bold small">DÜZENLE</a>
                            <a asp-action="Delete" asp-route-id="@item.AntrenorId" class="text-danger text-decoration-none mx-2 fw-bold small">SİL</a>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>