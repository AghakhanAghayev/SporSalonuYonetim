@model SporSalonuYonetim.Models.Antrenor

@{
    ViewData["Title"] = "Antrenör Düzenle";
}

<div class="container mt-4">
    <h1>Antrenör Bilgilerini Düzenle</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="AntrenorId" />

                        <div class="form-group mb-3">
                            <label asp-for="AdSoyad" class="control-label fw-bold"></label>
                            <input asp-for="AdSoyad" class="form-control" />
                            <span asp-validation-for="AdSoyad" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Cinsiyet" class="control-label fw-bold"></label>
                            <select asp-for="Cinsiyet" class="form-select">
                                <option value="">-- Cinsiyet Seçiniz --</option>
                                <option value="Erkek">Erkek</option>
                                <option value="Kadın">Kadın</option>
                            </select>
                            <span asp-validation-for="Cinsiyet" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="UzmanlikAlani" class="control-label fw-bold"></label>
                            <select asp-for="UzmanlikAlani" class="form-select">
                                <option value="">-- Bir Uzmanlık Seçin --</option>
                                @if (ViewBag.Uzmanliklar != null)
                                {
                                    foreach (var alan in ViewBag.Uzmanliklar)
                                    {
                                        <option value="@alan">@alan</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="UzmanlikAlani" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label fw-bold">Çalıştığı Salon</label>
                            <select asp-for="SporSalonuId" class="form-control" asp-items="ViewBag.SporSalonuId"></select>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CalismaBaslangic" class="control-label fw-bold"></label>
                            <input asp-for="CalismaBaslangic" type="time" class="form-control" />
                            <span asp-validation-for="CalismaBaslangic" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CalismaBitis" class="control-label fw-bold"></label>
                            <input asp-for="CalismaBitis" type="time" class="form-control" />
                            <span asp-validation-for="CalismaBitis" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ResimUrl" class="control-label fw-bold"></label>
                            <input asp-for="ResimUrl" class="form-control" placeholder="https://..." />
                            <span asp-validation-for="ResimUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group d-grid gap-2 mt-4">
                            <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-warning btn-lg text-white" />
                            <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}