@model IEnumerable<SporSalonuYonetim.Models.SporSalonu>

@{
    ViewData["Title"] = "Spor Salonları Haritası";
}

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<style>
    #map {
        height: 600px;
        width: 100%;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .salon-card {
        cursor: pointer;
        transition: all 0.2s;
        border-left: 5px solid #007bff;
    }

        .salon-card:hover {
            background-color: #f8f9fa;
            transform: translateX(5px);
        }

    .scroll-list {
        max-height: 600px;
        overflow-y: auto;
        padding-right: 5px;
    }
</style>

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="fw-bold text-primary">Spor Salonları</h3>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Create" class="btn btn-success btn-sm">+ Yeni Ekle</a>
                }
            </div>

            <div class="scroll-list">
                @foreach (var item in Model)
                {
                    // Koordinat kontrolü ve virgül düzeltme
                    string enlem = item.Enlem?.Replace(",", ".") ?? "";
                    string boylam = item.Boylam?.Replace(",", ".") ?? "";
                    bool koordinatVar = !string.IsNullOrEmpty(enlem) && !string.IsNullOrEmpty(boylam);

                    <div class="card mb-3 salon-card shadow-sm">
                        <div class="card-body" onclick="@(koordinatVar ? $"haritayaGit({enlem}, {boylam})" : "alert('Bu salonun harita koordinatları girilmemiş.')")">
                            <h5 class="card-title fw-bold text-primary">@item.Ad</h5>
                            <p class="card-text text-muted small mb-1"><i class="bi bi-geo-alt"></i> @item.Sehir</p>

                            @if (!koordinatVar)
                            {
                                <span class="badge bg-danger">Koordinat Eksik</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Haritada Göster</span>
                            }
                        </div>

                        <div class="card-footer bg-white border-top-0">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Detaylar</a>

                                @if (User.IsInRole("Admin"))
                                {
                                    <div>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">Düzenle</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm ms-1">Sil</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="col-md-8">
            <div id="map"></div>
        </div>
    </div>
</div>

<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
    // 1. Haritayı Başlat (Varsayılan: Sakarya)
    var map = L.map('map').setView([40.7669, 30.3860], 13);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '© OpenStreetMap contributors'
    }).addTo(map);

    // 2. İşaretçileri (Pinleri) Ekle
    var markers = [];

    @foreach (var item in Model)
    {
            if (!string.IsNullOrEmpty(item.Enlem) && !string.IsNullOrEmpty(item.Boylam))
            {
                    var lat = item.Enlem.Replace(",", ".");
                    var lng = item.Boylam.Replace(",", ".");

                    <text>
                        var marker = L.marker([@lat, @lng]).addTo(map);

                        marker.bindPopup(`
                            <div style="text-align:center; min-width: 150px;">
                                <h6 style="font-weight:bold; color:#0d6efd;">@item.Ad</h6>
                                <p style="margin:5px 0; font-size:0.9em;">@item.Adres</p>
                                <span class="badge bg-secondary">@item.Telefon</span><br/>
                                <a href="/SporSalonus/Details/@item.Id" class="btn btn-primary btn-sm mt-2 text-white">Salona Git</a>
                            </div>
                        `);
                        markers.push(marker);
                    </text>
            }
    }

    function haritayaGit(lat, lng) {
        map.flyTo([lat, lng], 16, {
            animate: true,
            duration: 1.5
        });
    }
</script>