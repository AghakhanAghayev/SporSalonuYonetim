@model SporSalonuYonetim.Models.SporSalonu

@{
    ViewData["Title"] = "Yeni Salon Ekle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-plus-circle"></i> Yeni Şube Ekle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Ad" class="form-label fw-bold"></label>
                            <input asp-for="Ad" class="form-control" placeholder="Örn: Merkez Şube" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Sehir" class="form-label fw-bold"></label>
                                <input asp-for="Sehir" class="form-control" placeholder="Örn: İstanbul" />
                                <span asp-validation-for="Sehir" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Telefon" class="form-label fw-bold"></label>
                                <input asp-for="Telefon" class="form-control" placeholder="0555..." />
                                <span asp-validation-for="Telefon" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row bg-light p-2 rounded mb-3 border">
                            <div class="col-12 mb-2">
                                <h6 class="text-primary fw-bold"><i class="bi bi-clock"></i> Çalışma Saatleri</h6>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Açılış Saati</label>
                                <input asp-for="AcilisSaati" type="time" class="form-control" />
                                <span asp-validation-for="AcilisSaati" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Kapanış Saati</label>
                                <input asp-for="KapanisSaati" type="time" class="form-control" />
                                <span asp-validation-for="KapanisSaati" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Adres" class="form-label fw-bold"></label>
                            <textarea asp-for="Adres" class="form-control" rows="2" placeholder="Adres tarifi..."></textarea>
                            <span asp-validation-for="Adres" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Enlem" class="form-label fw-bold"></label>
                                <input asp-for="Enlem" class="form-control" placeholder="Örn: 40.773074" />
                                <span asp-validation-for="Enlem" class="text-danger"></span>
                                <small class="text-muted">Google Maps'te yere sağ tıklayıp en üstteki sayıyı kopyalayın (İlk sayı).</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Boylam" class="form-label fw-bold"></label>
                                <input asp-for="Boylam" class="form-control" placeholder="Örn: 30.394817" />
                                <span asp-validation-for="Boylam" class="text-danger"></span>
                                <small class="text-muted">Google Maps'te yere sağ tıklayıp en üstteki sayıyı kopyalayın (İkinci sayı).</small>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Kapasite" class="form-label fw-bold"></label>
                                <input asp-for="Kapasite" class="form-control" />
                                <span asp-validation-for="Kapasite" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ResimUrl" class="form-label fw-bold"></label>
                                <input asp-for="ResimUrl" class="form-control" placeholder="https://..." />
                                <div class="form-text">İnternetten bir resim linki yapıştırın.</div>
                                <span asp-validation-for="ResimUrl" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Oluştur</button>
                            <a asp-action="Index" class="btn btn-light border">Listeye Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}