@{
    ViewData["Title"] = "Yapay Zeka Antrenör";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4><i class="fa fa-robot"></i> AI Antrenörüne Danış</h4>
                </div>
                <div class="card-body">
                    <form asp-action="OneriAl" method="post">
                        <div class="mb-3">
                            <label>Yaşınız:</label>
                            <input type="number" name="yas" class="form-control" required placeholder="Örn: 22" />
                        </div>
                        <div class="mb-3">
                            <label>Kilonuz (kg):</label>
                            <input type="number" name="kilo" class="form-control" required placeholder="Örn: 75" />
                        </div>
                        <div class="mb-3">
                            <label>Boyunuz (cm):</label>
                            <input type="number" name="boy" class="form-control" required placeholder="Örn: 180" />
                        </div>
                        <div class="mb-3">
                            <label>Cinsiyet:</label>
                            <select name="cinsiyet" class="form-control">
                                <option value="Erkek">Erkek</option>
                                <option value="Kadın">Kadın</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label>Hedefiniz:</label>
                            <select name="hedef" class="form-control">
                                <option value="Kilo Vermek">Kilo Vermek (Yağ Yakımı)</option>
                                <option value="Kas Yapmak">Kas Yapmak (Hacim)</option>
                                <option value="Formu Korumak">Formu Korumak</option>
                                <option value="Kondisyon Artırmak">Kondisyon Artırmak</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-success w-100">
                            Yapay Zekaya Sor
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            @if (ViewBag.Cevap != null)
            {
                <div class="alert alert-info shadow">
                    <h5><i class="fa fa-comment-dots"></i> AI Önerisi:</h5>
                    <hr />
                    <p style="white-space: pre-line;">@ViewBag.Cevap</p>
                </div>
            }
            else
            {
                <div class="alert alert-secondary">
                    <p>Yandaki formu doldurarak vücut tipine ve hedefine uygun özel bir program alabilirsin.</p>
                    <p><em>Örnek: "20 yaşında, 70 kilo, kas yapmak isteyen biri..."</em></p>
                </div>
            }
        </div>
    </div>
</div>