@model SporSalonuYonetim.Models.Hizmet

@{
    ViewData["Title"] = Model.Ad;
    string resim = string.IsNullOrEmpty(Model.ResimUrl)
        ? "https://images.unsplash.com/photo-1534438327276-14e5300c3a48?q=80&w=1470&auto=format&fit=crop"
        : Model.ResimUrl;
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 overflow-hidden rounded-3">
        <div class="row g-0">
            <div class="col-md-6">
                <img src="@resim" class="img-fluid h-100 w-100" style="object-fit: cover; min-height: 400px;" alt="@Model.Ad">
            </div>

            <div class="col-md-6 bg-white d-flex align-items-center">
                <div class="card-body p-5">
                    <div class="d-flex justify-content-between align-items-start">
                        <h1 class="display-5 fw-bold text-dark mb-3">@Model.Ad</h1>
                        <span class="badge bg-success fs-5 rounded-pill">₺@Model.Ucret</span>
                    </div>

                    <div class="mb-4">
                        <span class="text-muted fs-5"><i class="bi bi-stopwatch"></i> Süre: </span>
                        <span class="fw-bold fs-5">@Model.SureDakika Dakika</span>
                    </div>

                    <p class="card-text lead text-secondary mb-5">
                        @(Model.Aciklama ?? "Henüz bir açıklama girilmemiş.")
                    </p>

                    <div class="d-grid gap-2">
                        <a asp-controller="Randevus" asp-action="Create" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                            <i class="bi bi-calendar-check"></i> Hemen Randevu Al
                        </a>

                        <div class="d-flex justify-content-between mt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Listeye Dön</a>

                            @if (User.IsInRole("Admin"))
                            {
                                <div>
                                    <a asp-action="Edit" asp-route-id="@Model.HizmetId" class="btn btn-warning rounded-pill px-3">Düzenle</a>
                                    <a asp-action="Delete" asp-route-id="@Model.HizmetId" class="btn btn-danger rounded-pill px-3">Sil</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>