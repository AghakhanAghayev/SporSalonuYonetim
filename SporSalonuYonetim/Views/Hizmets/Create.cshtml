@model SporSalonuYonetim.Models.Hizmet

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<div class="container mt-4">
    <h1>Yeni Hizmet Ekle</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Ad" class="control-label fw-bold"></label>
                    <input asp-for="Ad" class="form-control" placeholder="Örn: Fitness Paketi" />
                    <span asp-validation-for="Ad" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Ucret" class="control-label fw-bold"></label>
                    <div class="input-group">
                        <input asp-for="Ucret" type="number" step="0.01" class="form-control" />
                        <span class="input-group-text">₺</span>
                    </div>
                    <span asp-validation-for="Ucret" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Aciklama" class="form-label fw-bold"></label>
                    <textarea asp-for="Aciklama" class="form-control" rows="2" placeholder="Hizmet hakkında kısa bilgi..."></textarea>
                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ResimUrl" class="form-label fw-bold"></label>
                    <input asp-for="ResimUrl" class="form-control" placeholder="https://ornek.com/resim.jpg" />
                    <span asp-validation-for="ResimUrl" class="text-danger"></span>
                    <small class="text-muted">Unsplash veya Google'dan bir resim bağlantısı yapıştırın.</small>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SureDakika" class="control-label fw-bold"></label>
                    <div class="input-group">
                        <input asp-for="SureDakika" type="number" class="form-control" />
                        <span class="input-group-text">Dakika</span>
                    </div>
                    <span asp-validation-for="SureDakika" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Hizmeti Kaydet" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}