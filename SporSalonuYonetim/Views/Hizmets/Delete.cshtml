@model SporSalonuYonetim.Models.Hizmet

@{
    ViewData["Title"] = "Hizmeti Sil";
}

<div class="container mt-4">
    <h1 class="text-danger">Hizmeti Sil</h1>
    <h3 class="text-muted">Bu hizmeti silmek istediğinize emin misiniz?</h3>
    <hr />

    <div class="card shadow-sm border-danger">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Ad)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Ad)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Ucret)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Ucret) ₺
                </dd>

                <dt class="col-sm-3 fw-bold">
                    Süre
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.SureDakika) Dakika
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="HizmetId" />
                <input type="submit" value="Evet, Sil" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
            </form>
        </div>
    </div>
</div>