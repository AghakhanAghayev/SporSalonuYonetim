@model IEnumerable<SporSalonuYonetim.Models.Hizmet>

@{
    ViewData["Title"] = "Hizmetler";
}

<div class="container mt-4">
    <h1>Hizmet Listesi</h1>
    <hr />

    @if (User.IsInRole("Admin"))
    {
        <p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Hizmet Ekle
            </a>
        </p>
    }

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Ad)</th>

                <th>@Html.DisplayNameFor(model => model.Ucret)</th>

                <th>Süre</th>

                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">
                        @Html.DisplayFor(modelItem => item.Ad)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Ucret) ₺
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SureDakika) dk
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.HizmetId" class="btn btn-sm btn-info text-white">Detay</a>

                        @if (User.IsInRole("Admin"))
                        {
                            <span>|</span>
                            <a asp-action="Edit" asp-route-id="@item.HizmetId" class="btn btn-sm btn-warning">Düzenle</a>
                            <span>|</span>
                            <a asp-action="Delete" asp-route-id="@item.HizmetId" class="btn btn-sm btn-danger">Sil</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>