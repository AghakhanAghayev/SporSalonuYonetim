@model IEnumerable<SporSalonuYonetim.Models.Hizmet>

@{
    ViewData["Title"] = "Hizmetlerimiz";
}

<style>
    /* Sayfa arka planı */
    body {
        background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1540497077202-7c8a3999166f?q=80&w=1470&auto=format&fit=crop') no-repeat center center/cover;
        background-attachment: fixed;
        min-height: 100vh;
    }

    .container.mt-5 {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 40px;
        margin-top: 50px !important;
        margin-bottom: 50px !important;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    }

    /* Kartlara özel hover efekti */
    .service-card {
        border: none;
        border-radius: 15px;
        transition: all 0.3s ease;
        overflow: hidden;
        background: #fff;
        height: 100%; /* Kartların boyunu eşitle */
    }

        .service-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }

    .service-img-wrapper {
        height: 200px;
        overflow: hidden;
        position: relative;
    }

    .service-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s;
    }

    .service-card:hover .service-img {
        transform: scale(1.1); /* Resme zoom efekti */
    }

    .price-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background-color: rgba(255, 255, 255, 0.9);
        padding: 5px 15px;
        border-radius: 20px;
        font-weight: bold;
        color: #28a745;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }
</style>

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-dark">Hizmetlerimiz</h1>
        <p class="lead text-muted">Hedeflerinize ulaşmanız için sunduğumuz profesyonel çözümler.</p>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary btn-lg rounded-pill px-4 shadow-sm">
                <i class="bi bi-plus-lg"></i> Yeni Hizmet Ekle
            </a>
        }
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            // Resim yoksa rastgele spor resmi koy
            string resim = string.IsNullOrEmpty(item.ResimUrl)
            ? "https://images.unsplash.com/photo-1534438327276-14e5300c3a48?q=80&w=1470&auto=format&fit=crop"
            : item.ResimUrl;

            <div class="col">
                <div class="card service-card shadow-sm h-100">
                    <div class="service-img-wrapper">
                        <img src="@resim" class="card-img-top service-img" alt="@item.Ad">
                        <span class="price-badge">₺@item.Ucret</span>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h4 class="card-title fw-bold text-dark">@item.Ad</h4>

                        <div class="mb-3 text-muted small">
                            <i class="bi bi-clock-history text-warning"></i> @item.SureDakika Dakika
                        </div>

                        <p class="card-text text-secondary flex-grow-1">
                            @(string.IsNullOrEmpty(item.Aciklama) ? "Bu hizmet için detaylı açıklama girilmemiştir." : item.Aciklama)
                        </p>

                        <hr class="text-muted" />

                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <a asp-action="Details" asp-route-id="@item.HizmetId" class="btn btn-outline-primary rounded-pill w-100 me-2">İncele</a>

                            @if (User.IsInRole("Admin"))
                            {
                                <div class="dropdown">
                                    <button class="btn btn-light rounded-circle" type="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.HizmetId"><i class="bi bi-pencil"></i> Düzenle</a></li>
                                        <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.HizmetId"><i class="bi bi-trash"></i> Sil</a></li>
                                    </ul>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>