@model SporSalonuYonetim.Models.Hizmet

@{
    ViewData["Title"] = "Hizmeti Düzenle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-pencil-square"></i> Hizmeti Düzenle</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="HizmetId" />

                        <div class="mb-3">
                            <label asp-for="Ad" class="form-label fw-bold"></label>
                            <input asp-for="Ad" class="form-control" placeholder="Örn: Fitness" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Ucret" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text">₺</span>
                                    <input asp-for="Ucret" class="form-control" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="Ucret" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="SureDakika" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <input asp-for="SureDakika" class="form-control" type="number" />
                                    <span class="input-group-text">Dakika</span>
                                </div>
                                <span asp-validation-for="SureDakika" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Aciklama" class="form-label fw-bold"></label>
                            <textarea asp-for="Aciklama" class="form-control" rows="3" placeholder="Hizmet hakkında detaylı bilgi..."></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ResimUrl" class="form-label fw-bold"></label>
                            <input asp-for="ResimUrl" class="form-control" placeholder="https://..." id="resimInput" />
                            <span asp-validation-for="ResimUrl" class="text-danger"></span>
                            <small class="text-muted">Resim bağlantısını buraya yapıştırın.</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg text-dark fw-bold">
                                <i class="bi bi-check-circle-fill"></i> Değişiklikleri Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Listeye Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}