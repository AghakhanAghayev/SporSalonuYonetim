@model IEnumerable<SporSalonuYonetim.Models.Randevu>

@{
    ViewData["Title"] = "Randevu Yönetimi";
}

<style>
    .appointment-card {
        border: 1px solid #eee;
        border-radius: 12px;
        background: #fff;
        border-left: 5px solid #ccc;
        transition: all 0.2s;
    }

        .appointment-card:hover {
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

    .border-bekliyor {
        border-left-color: #ffc107 !important;
    }

    .border-onay {
        border-left-color: #198754 !important;
    }

    .border-red {
        border-left-color: #dc3545 !important;
    }

    .border-tamam {
        border-left-color: #0d6efd !important;
    }

    .date-circle {
        width: 70px;
        height: 70px;
        background: #f8f9fa;
        border-radius: 50%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        color: #495057;
        border: 2px solid #e9ecef;
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">
            @(User.IsInRole("Admin") ? "Randevu Yönetim Paneli" : "Randevularım")
        </h2>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4">
            <i class="bi bi-plus-lg"></i> Yeni Randevu
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-light text-center shadow-sm" role="alert">
            Henüz hiç randevu kaydı yok.
        </div>
    }

    <div class="row">
        @foreach (var item in Model.OrderByDescending(x => x.TarihSaat))
        {
            string borderClass = "border-bekliyor";
            string badgeClass = "bg-warning text-dark";

            if (item.Durum == "Onaylandı") { borderClass = "border-onay"; badgeClass = "bg-success"; }
            else if (item.Durum == "Reddedildi" || item.Durum == "İptal") { borderClass = "border-red"; badgeClass = "bg-danger"; }
            else if (item.Durum == "Tamamlandı") { borderClass = "border-tamam"; badgeClass = "bg-primary"; }

            <div class="col-12 mb-3">
                <div class="card appointment-card p-3 @borderClass">
                    <div class="row align-items-center">

                        <div class="col-auto">
                            <div class="date-circle">
                                <span style="font-size:1.2rem; line-height:1;">@item.TarihSaat.Day</span>
                                <span style="font-size:0.7rem; text-transform:uppercase;">@item.TarihSaat.ToString("MMM")</span>
                            </div>
                        </div>

                        <div class="col">
                            <h5 class="fw-bold mb-1">@item.Hizmet.Ad</h5>

                            <div class="mb-1">
                                <span class="badge bg-light text-dark border">
                                    <i class="bi bi-geo-alt-fill text-danger"></i>
                                    @(item.Antrenor.SporSalonu != null ? item.Antrenor.SporSalonu.Ad : "Salon Bilgisi Yok")
                                </span>
                            </div>

                            <div class="text-muted small">
                                <i class="bi bi-person-fill"></i> @item.Antrenor.AdSoyad
                                <span class="mx-2">|</span>
                                <i class="bi bi-clock"></i> @item.TarihSaat.ToString("HH:mm")

                                @if (User.IsInRole("Admin"))
                                {
                                    <span class="mx-2">|</span>
                                    <i class="bi bi-person-circle"></i>

                                    <strong>Üye:</strong> 
                                    @item.Uye.UserName
                                }
                            </div>
                        </div>

                        <div class="col-auto text-center">
                            <span class="badge @badgeClass rounded-pill px-3">@item.Durum</span>
                        </div>

                        <div class="col-auto border-start ps-3">
                            <div class="d-flex flex-column gap-2">
                                <a asp-action="Details" asp-route-id="@item.RandevuId" class="btn btn-sm btn-outline-secondary">İncele</a>

                                @if (User.IsInRole("Admin") && item.Durum == "Bekliyor")
                                {
                                    <form asp-action="Onayla" asp-route-id="@item.RandevuId" method="post" class="d-grid">
                                        <button type="submit" class="btn btn-sm btn-success"><i class="bi bi-check-lg"></i> Onayla</button>
                                    </form>
                                    <form asp-action="Reddet" asp-route-id="@item.RandevuId" method="post" class="d-grid">
                                        <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-x-lg"></i> Reddet</button>
                                    </form>
                                }

                                @if (!User.IsInRole("Admin") && (item.Durum == "Bekliyor" || item.Durum == "Onaylandı") && item.TarihSaat > DateTime.Now)
                                {
                                    <form asp-action="IptalEt" asp-route-id="@item.RandevuId" method="post" onsubmit="return confirm('İptal etmek istiyor musunuz?');" class="d-grid">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">İptal</button>
                                    </form>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>