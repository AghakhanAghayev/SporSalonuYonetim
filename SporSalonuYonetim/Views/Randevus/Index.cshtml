@model IEnumerable<SporSalonuYonetim.Models.Randevu>

@{
    ViewData["Title"] = "Randevu Takvimi";
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Randevu Takvimi</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-calendar-plus"></i> Yeni Randevu Al
        </a>
    </div>
    <hr />

    @if (TempData["Hata"] != null)
    {
        <div class="alert alert-danger">@TempData["Hata"]</div>
    }

    <table class="table table-hover shadow-sm mt-3">
        <thead class="table-dark">
            <tr>
                <th>Tarih & Saat</th>
                <th>Durum</th>
                <th>Üye</th>
                <th>Antrenör</th>
                <th>Hizmet</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">
                        @item.TarihSaat.ToString("dd.MM.yyyy HH:mm")
                    </td>

                    <td>
                        @if (item.Durum == "Onaylandı")
                        {
                            <span class="badge bg-success">Onaylandı</span>
                        }
                        else if (item.Durum == "Tamamlandı")
                        {
                            <span class="badge bg-secondary">Tamamlandı</span>
                        }
                        else if (item.Durum == "Reddedildi" || item.Durum == "İptal")
                        {
                            <span class="badge bg-danger">@item.Durum</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Bekliyor</span>
                        }
                    </td>

                    <td>
                        @if (item.Uye != null)
                        {
                            <span class="fw-bold text-primary">@item.Uye.UserName</span>
                        }
                        else
                        {
                            <span>Misafir</span>
                        }
                    </td>

                    <td>@Html.DisplayFor(modelItem => item.Antrenor.AdSoyad)</td>
                    <td>@Html.DisplayFor(modelItem => item.Hizmet.Ad)</td>

                    <td>
                        <a asp-action="Details" asp-route-id="@item.RandevuId" class="btn btn-sm btn-info text-white">Detay</a>

                        @if ((item.Durum == "Bekliyor" || item.Durum == "Onaylandı") && item.TarihSaat > DateTime.Now)
                        {
                            @if (User.IsInRole("Admin") || item.UyeId == currentUserId)
                            {
                                <form asp-action="IptalEt" asp-route-id="@item.RandevuId" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Randevuyu iptal etmek istediğinize emin misiniz?');">
                                        İptal Et
                                    </button>
                                </form>
                            }
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <span>|</span>
                            <a asp-action="Edit" asp-route-id="@item.RandevuId" class="btn btn-sm btn-warning">Yönet</a>
                            <a asp-action="Delete" asp-route-id="@item.RandevuId" class="btn btn-sm btn-danger">Sil</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>