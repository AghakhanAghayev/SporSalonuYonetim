@model SporSalonuYonetim.Models.Randevu

@{
    ViewData["Title"] = "Randevu Düzenle";
}

<div class="container mt-4">
    <h1>Randevu Durumunu Güncelle</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-warning">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">Yönetici İşlemleri</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="RandevuId" />

                        <input type="hidden" asp-for="UyeId" />

                        <div class="form-group mb-3">
                            <label class="fw-bold">Üye Adı</label>
                            <input type="text" class="form-control" value="@(Model.Uye != null ? Model.Uye.UserName : "Bilinmiyor")" disabled />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Durum" class="control-label fw-bold">Randevu Durumu</label>
                            <select asp-for="Durum" class="form-select">
                                <option value="Bekliyor">Bekliyor (Sarı)</option>
                                <option value="Onaylandı">Onaylandı (Yeşil)</option>
                                <option value="Reddedildi">Reddedildi (Kırmızı)</option>
                                <option value="İptal">İptal Edildi</option>
                                <option value="Tamamlandı">Tamamlandı</option>
                            </select>
                            <span asp-validation-for="Durum" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="TarihSaat" class="control-label fw-bold"></label>
                            <input asp-for="TarihSaat" type="datetime-local" class="form-control" value="@Model.TarihSaat.ToString("yyyy-MM-ddTHH:mm")" />
                            <span asp-validation-for="TarihSaat" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="AntrenorId" class="control-label fw-bold"></label>
                            <select asp-for="AntrenorId" class="form-select" asp-items="ViewBag.AntrenorId"></select>
                            <span asp-validation-for="AntrenorId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="HizmetId" class="control-label fw-bold">Hizmet (Sabit)</label>
                            @* disabled ekleyerek seçimi dondurduk *@
                            <select asp-for="HizmetId" class="form-select" asp-items="ViewBag.HizmetId" disabled></select>

                            @* Verinin Controller'a gitmesi için bu gizli satırı ekledik *@
                            <input type="hidden" asp-for="HizmetId" />

                            <span asp-validation-for="HizmetId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-warning" />
                            <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('AntrenorId').addEventListener('change', function() {
            validateAppointment();
        });

        document.getElementById('HizmetId').addEventListener('change', function() {
            validateAppointment();
        });

        document.getElementById('TarihSaat').addEventListener('change', function() {
            validateAppointment();
        });

        function validateAppointment() {
            var tarihSaat = document.getElementById('TarihSaat').value;
            var antrenorId = document.getElementById('AntrenorId').value;
            var hizmetId = document.getElementById('HizmetId').value;
            var randevuId = document.getElementById('RandevuId').value;

            if (!tarihSaat || !antrenorId || !hizmetId) return;

            var data = {
                AntrenorId: parseInt(antrenorId),
                HizmetId: parseInt(hizmetId),
                TarihSaat: new Date(tarihSaat)
            };

            $.ajax({
                url: '/api/antrenor/kontrol-randevu',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function (response) {
                    var errorDiv = document.getElementById('appointment-errors');
                    if (!response.valid) {
                        if (!errorDiv) {
                            var form = document.querySelector('form');
                            errorDiv = document.createElement('div');
                            errorDiv.id = 'appointment-errors';
                            errorDiv.className = 'alert alert-danger mt-3';
                            form.insertBefore(errorDiv, form.lastElementChild);
                        }
                        errorDiv.innerHTML = '<strong>Randevu düzenlenemez:</strong><ul>' + response.errors.map(e => '<li>' + e + '</li>').join('') + '</ul>';
                    } else {
                        if (errorDiv) errorDiv.remove();
                    }
                },
                error: function () {
                    console.log('Kontrol başarısız.');
                }
            });
        }

        // Sayfa yüklenince mevcut değerlerle kontrol et
        validateAppointment();
    </script>
}